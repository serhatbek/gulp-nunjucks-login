{% macro item(text, class, href, buttonv2, buttonv3) %}
  {% if href %}
    <a href="{{ href }}" class="button
      {%- if class %} {{ class }} {%- endif -%}
      {%- if buttonv2 %} button--v2{%- endif -%}
    ">{{ text }}</a>
  {% else %}
    <button class="button
      {%- if class %} {{ class }} {%- endif -%}
      {%- if buttonv2 %} button--v2{%- endif -%}
      {%- if buttonv3 %} button--v3{%- endif -%}
    ">{{ text }}</button>
  {% endif %}
{% endmacro %}