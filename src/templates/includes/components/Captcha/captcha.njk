{% import 'includes/components/Input/input.njk' as Input %}

<div class="captcha">
  <div class="captcha__img">
    <figure>
      <img src="/assets/images/captcha.png">
      {# https://source.unsplash.com/random/150×72/ #}
    </figure>
    <figure id="captcha__refresh">
      <img src="/assets/images/refresh.png">
    </figure>
    <div class="vertical-line"></div>
    <figure id="captcha__listen">
      <img src="/assets/images/listen.png">
    </figure>
  </div>
  <div class="captcha__input">
    {{Input.item(
      required=true,
      id='login__captcha',
      labelFor='login__captcha',
      label='Resimdeki kodu giriniz',
      attr='data-parsley-errors-container=#input-errors data-parsley-minlength=6 data-parsley-minlength-message=Enaz6haneliolmalı data-parsley-required-message=Kodudoğrugirdiğinizdeneminolun.'
    )}}
  </div>
</div>