{% extends 'includes/layout/layout.njk' %}
{% import 'includes/components/Button/button.njk' as Button %}
{% import 'includes/components/Input/input.njk' as Input %}
{% set title = 'Login Password' %}

{% block content %}
  <section class="section-login">
    <div class="container">
      <figure>
        <img src="/assets/images/logo.png" alt="Logo">
      </figure>
      <form id="form-email" class="form">
        <h1>Giriş</h1>
        <p class="user-email">gokce.cetin@turkcell.com.tr</p>
        <span>için giriş yapın</span>
        <div class="form__row">
          {{Input.item(
            required=true,
            type='Password',
            id='login__password',
            labelFor='login__password',
            label='Şifre',
            icon='/assets/images/pass-visible.png',
            parsleyPassword=true
          )}}
        </div>

        <div class="form__action">
          {{Button.item(
            text='Giriş Yap',
            buttonDisabled=true
          )}}
        </div>
      </form>
    </div>
  </section>
{% endblock %}